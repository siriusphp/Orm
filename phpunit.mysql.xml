<phpunit bootstrap="tests/bootstrap.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         verbose="false"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         stopOnError="false">
    <testsuites>
        <testsuite name="sirius/orm">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="DB_ENGINE" value="mysql"></env>
        <env name="DB_CONNECTION" value="mysql:host=siriusorm_mysql;dbname=siriusorm"></env>
        <env name="DB_USER" value="siriusormuser"></env>
        <env name="DB_PASS" value="rootpass"></env>
    </php>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>
